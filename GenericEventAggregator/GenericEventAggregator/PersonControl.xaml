<UserControl x:Class="GenericEventAggregator.PersonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericEventAggregator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance d:Type={x:Type local:Person}, IsDesignTimeCreatable=False}">
    <StackPanel>
        <TextBlock Text="{Binding Path=Name}"></TextBlock>
        <TextBlock Text="{Binding Path=FamilyName}"></TextBlock>
        <TextBlock Text="{Binding Path=Birthday}"></TextBlock>
    </StackPanel>
</UserControl>
